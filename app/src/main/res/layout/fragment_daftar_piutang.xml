<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal : "
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"
            android:textSize="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04/10/2019"
            android:textColor="#474747"
            android:textStyle="bold"
            android:textSize="25dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/print"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Print"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:textColor="#fff"
        android:background="@drawable/round_hijau_tua"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:id="@+id/r1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:weightSum="6.2"
            android:background="@drawable/round_action_bar">
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:text="Kartu Piutang"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#474747"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:layout_weight="1.2"/>

            <TextView
                android:id="@+id/nama"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1.3"
                android:gravity="center"
                android:text="Kode Pelanggan"
                android:textStyle="bold"
                android:textColor="#474747"
                android:textSize="20dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="Nama Pelanggan"
                android:textStyle="bold"
                android:textColor="#474747"
                android:textSize="20dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1.2"
                android:gravity="center"
                android:text="Jumlah Piutang"
                android:textStyle="bold"
                android:textColor="#474747"
                android:textSize="20dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="60dp"
                android:textStyle="bold"
                android:text="Status Piutang"
                android:textColor="#474747"
                android:textSize="20dp" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/r1"
        android:layout_marginTop="160dp"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    </RelativeLayout>

</FrameLayout>