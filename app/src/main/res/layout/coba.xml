<RelativeLayout
    android:id="@+id/footer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:gravity="bottom"
    android:layout_gravity="bottom"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="vertical"

            android:background="#f21e0b"
            android:weightSum="2">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:src="@mipmap/ic_dashboard_p"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:layout_marginTop="16dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Dashboard"
                android:layout_marginBottom="2dp"
                android:textColor="#fff"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#ffff"
            android:weightSum="2">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:src="@mipmap/ic_penjualan_a"
                android:scaleType="fitCenter"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_marginTop="16dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Penjualan"
                android:textColor="#7b7b7b"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#ffff"
            android:weightSum="2">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:src="@mipmap/ic_pembelian_a"
                android:scaleType="fitCenter"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_marginTop="16dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Pembelian"
                android:textColor="#7b7b7b"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#ffff"
            android:weightSum="2">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:src="@mipmap/ic_persediaan_a"
                android:scaleType="fitCenter"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_marginTop="16dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Persediaan"
                android:textColor="#7b7b7b"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#ffff"
            android:weightSum="2">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:src="@mipmap/ic_jurnal_a"
                android:scaleType="fitCenter"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_marginTop="16dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Jurnal"
                android:textColor="#7b7b7b"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#ffff"
            android:weightSum="2">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:src="@mipmap/ic_keuangan_a"
                android:scaleType="fitCenter"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_marginTop="16dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Keuangan"
                android:textColor="#7b7b7b"
                android:textSize="20dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>