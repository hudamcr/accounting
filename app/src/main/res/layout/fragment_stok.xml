<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="120dp"
        android:gravity="left"
        android:text="GRAND TOTAL"
        android:textColor="#474747"
        android:textSize="30dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/grand_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="120dp"
        android:gravity="right"
        android:layout_gravity="right"
        android:text="Rp. 61.775.509.342,9"
        android:textColor="#474747"
        android:textSize="30dp"
        android:textStyle="bold"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:id="@+id/r1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginRight="120dp"
            android:layout_marginLeft="120dp"
            android:background="@drawable/round_action_bar"
            android:weightSum="4">
            <TextView
                android:id="@+id/nama"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:text="Nama Item"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#474747"
                android:gravity="center"
                android:layout_weight="1.5"/>

            <TextView
                android:id="@+id/stok"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="Jumlah Stok"
                android:textStyle="bold"
                android:textColor="#474747"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/satuan"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Rp"
                android:textColor="@android:color/transparent"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/nominal"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginRight="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Piutang"
                android:textStyle="bold"
                android:textColor="#474747"
                android:textSize="25dp" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/r1"
        android:layout_marginTop="180dp"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="400dp"></android.support.v7.widget.RecyclerView>
    </RelativeLayout>

</FrameLayout>