<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="120dp"
    android:layout_marginRight="120dp">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Data Piutang Costumer yang Sudah Lewat 3 Bulan dari Jatuh Tempo"
        android:textSize="25dp"
        android:textColor="#474747"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:id="@+id/r1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginRight="120dp"
            android:layout_marginLeft="120dp"
            android:weightSum="3"
            android:background="@drawable/round_action_bar">
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:text="Detail"
                android:textSize="25dp"
                android:textColor="#474747"
                android:textStyle="bold"
                android:layout_marginLeft="160dp"
                android:gravity="center"
                android:layout_weight="0.5"/>

            <TextView
                android:id="@+id/nama"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="Nama Costumer"
                android:textStyle="bold"
                android:textColor="#474747"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/satuan"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Rp"
                android:textStyle="bold"
                android:textColor="@android:color/transparent"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/nominal"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginRight="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Piutang"
                android:textStyle="bold"
                android:textColor="#474747"
                android:textSize="25dp" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/r1"
        android:layout_marginTop="150dp"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="400dp"></android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</FrameLayout>