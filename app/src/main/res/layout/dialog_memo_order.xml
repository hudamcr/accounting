<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:focusable="false"
            android:background="@android:color/transparent">
            <ImageView
                android:id="@+id/imageXX"
                android:layout_gravity="right"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_close" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail Pertanyaan"
                android:textStyle="bold"
                android:textColor="#474747"
                android:textSize="25dp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="120dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:id="@+id/nama"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Nama Costumer"
                    android:textSize="20dp"
                    android:textColor="#474747"
                    />
                <TextView
                    android:id="@+id/total"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="No. Pelanggan"
                    
                    android:textSize="20dp"
                    android:textColor="#474747"
                    android:gravity="right"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Rochmad Hidayat"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="#474747"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="NIP12903293"
                    
                    android:textSize="25dp"
                    android:textColor="#474747"
                    android:textStyle="bold"
                    android:gravity="right"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="130dp">
                <ExpandableListView
                    android:visibility="gone"
                    android:id="@+id/exp_1"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:groupIndicator="@null">
                </ExpandableListView>
                <ExpandableListView
                    android:id="@+id/simple_expandable_listview"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:divider="#000000"
                    android:groupIndicator="@null">
                </ExpandableListView>
                <TextView
                    android:id="@+id/print"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="Print"
                    android:textSize="20dp"
                    android:textColor="#fff"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/round_hijau_tua"/>
            </LinearLayout>
    </RelativeLayout>


    



    </android.support.v7.widget.CardView>