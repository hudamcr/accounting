<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_below="@+id/app"
    android:layout_marginTop="86dp"
    android:background="#000">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff">

    <android.support.design.widget.TabLayout
        android:layout_marginTop="20dp"
        android:layout_marginRight="120dp"
        android:layout_marginLeft="120dp"
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="50dp"
        android:background="@drawable/tab_layout_background"
        app:tabIndicatorHeight="0dp"
        app:tabTextColor="#474747"
        app:tabSelectedTextColor="#7f7f7f"
        app:tabMaxWidth="0dp"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabBackground="@drawable/tab_layout_selector"
        />




        <!--<android.support.design.widget.TabLayout-->
            <!--android:id="@+id/tab_bottom"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="100dp"-->
            <!--app:tabBackground="@mipmap/tab_layout_selector2"-->
            <!--app:tabTextColor="#666565"-->
            <!--app:tabSelectedTextColor="#ffffff"-->
            <!--app:tabMaxWidth="0dp"-->
            <!--app:tabIndicatorHeight="0dp"-->
            <!--app:tabGravity="fill"-->
            <!--app:tabMode="fixed"-->
            <!--android:layout_below="@id/viewpager"-->
            <!--app:layout_constraintBottom_toBottomOf="parent"-->
            <!--app:layout_constraintLeft_toLeftOf="parent"-->
            <!--app:layout_constraintRight_toRightOf="parent"/>-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">
                <android.support.v4.view.ViewPager
                    android:background="#fff"
                    android:layout_below="@id/tab"
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    android:layout_weight="1"
                    android:visibility="visible"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="6">
                    <LinearLayout
                        android:id="@+id/linear_dashboard_1"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="#f21e0b"
                        android:weightSum="2">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="0dp"
                            android:src="@mipmap/ic_dashboard_p"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="fitCenter"
                            android:layout_weight="1"
                            android:layout_marginTop="16dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="Dashboard"
                            android:layout_marginBottom="2dp"
                            android:textColor="#fff"
                            android:textSize="20dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linear_dashboard_2"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="#ffff"
                        android:weightSum="2">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="0dp"
                            android:src="@mipmap/ic_penjualan_a"
                            android:scaleType="fitCenter"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:layout_marginTop="16dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="Penjualan"
                            android:textColor="#7b7b7b"
                            android:textSize="20dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_dashboard_3"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="#ffff"
                        android:weightSum="2">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="0dp"
                            android:src="@mipmap/ic_pembelian_a"
                            android:scaleType="fitCenter"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:layout_marginTop="16dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="Pembelian"
                            android:textColor="#7b7b7b"
                            android:textSize="20dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_dashboard_4"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="#ffff"
                        android:weightSum="2">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="0dp"
                            android:src="@mipmap/ic_persediaan_a"
                            android:scaleType="fitCenter"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:layout_marginTop="16dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="Persediaan"
                            android:textColor="#7b7b7b"
                            android:textSize="20dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_dashboard_5"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="#ffff"
                        android:weightSum="2">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="0dp"
                            android:src="@mipmap/ic_jurnal_a"
                            android:scaleType="fitCenter"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:layout_marginTop="16dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="Jurnal"
                            android:textColor="#7b7b7b"
                            android:textSize="20dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linear_dashboard_6"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="#ffff"
                        android:weightSum="2">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="0dp"
                            android:src="@mipmap/ic_keuangan_a"
                            android:scaleType="fitCenter"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:layout_marginTop="16dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="Keuangan"
                            android:textColor="#7b7b7b"
                            android:textSize="20dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>