<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:focusable="false"
        android:background="@android:color/transparent">
        <ImageView
            android:id="@+id/imageXX"
            android:layout_gravity="right"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_close" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data Penjualan Hari Ini"
            android:textStyle="bold"
            android:textColor="#474747"
            android:textSize="25dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="150dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@drawable/round_action_bar"
            android:weightSum="5">
            <TextView
                android:id="@+id/nama"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="50dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Nama Item"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#474747"
                />
            <TextView
                android:id="@+id/berat"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Berat"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:textSize="25dp"
                android:textColor="#474747"
                
                />
            <TextView
                android:id="@+id/qty"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="Qty"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="#474747"
                
                />
            <TextView
                android:id="@+id/satuan"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginLeft="8dp"
                android:text="Rp. "
                android:textSize="25dp"
                android:textColor="@android:color/transparent"/>
            <TextView
                android:id="@+id/total"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1.5"
                android:text="Total"
                android:layout_marginRight="50dp"
                android:textSize="25dp"
                android:textColor="#474747"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="210dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:weightSum="5">
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="50dp"
                android:layout_weight="2"
                android:gravity="left"
                android:text="DEG"
                android:textSize="25dp"
                android:textColor="#474747"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="10 Kg"
                android:gravity="center_horizontal"
                android:textSize="25dp"
                android:textColor="#474747"
                
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="1"
                android:textSize="25dp"
                android:textColor="#474747"
                
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Rp. "
                android:textSize="25dp"
                android:layout_marginLeft="8dp"
                android:textColor="#474747"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1.5"
                android:text="3.800.000"
                android:layout_marginRight="50dp"
                android:textSize="25dp"
                android:textColor="#474747"
                
                android:gravity="right"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="280dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:weightSum="5">
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="50dp"
                android:layout_weight="2"
                android:gravity="left"
                android:text="DPG"
                android:textSize="25dp"
                android:textColor="#474747"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="10 Kg"
                android:gravity="center_horizontal"
                android:textSize="25dp"
                android:textColor="#474747"
                
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="1"
                android:textSize="25dp"
                android:textColor="#474747"
                
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Rp. "
                android:textSize="25dp"
                android:layout_marginLeft="8dp"
                android:textColor="#474747"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1.5"
                android:text="3.700.000"
                android:layout_marginRight="50dp"
                android:textSize="25dp"
                android:textColor="#474747"
                
                android:gravity="right"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="350dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:weightSum="5">
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="50dp"
                android:layout_weight="2"
                android:gravity="left"
                android:text="GREEN"
                android:textSize="25dp"
                android:textColor="#474747"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="10 Kg"
                android:gravity="center_horizontal"
                android:textSize="25dp"
                android:textColor="#474747"
                
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="1"
                android:textSize="25dp"
                android:textColor="#474747"
                
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Rp. "
                android:textSize="25dp"
                android:layout_marginLeft="8dp"
                android:textColor="#474747"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1.5"
                android:text="3.500.000"
                android:layout_marginRight="50dp"
                android:textSize="25dp"
                android:textColor="#474747"
                
                android:gravity="right"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="420dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:weightSum="5">
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="50dp"
                android:layout_weight="2"
                android:gravity="left"
                android:text="KARET 999 (CP)"
                android:textSize="25dp"
                android:textColor="#474747"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="10 Kg"
                android:gravity="center_horizontal"
                android:textSize="25dp"
                android:textColor="#474747"
                
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="1"
                android:textSize="25dp"
                android:textColor="#474747"
                
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Rp. "
                android:textSize="25dp"
                android:layout_marginLeft="8dp"
                android:textColor="#474747"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1.5"
                android:text="3.500.000"
                android:layout_marginRight="50dp"
                android:textSize="25dp"
                android:textColor="#474747"
                android:gravity="right"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
            android:layout_marginTop="490dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="30dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:weightSum="5">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="50dp"
                    android:layout_weight="2"
                    android:gravity="left"
                    android:text="TOTAL"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="#F44336"
            />
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="10 Kg"
                    android:gravity="center_horizontal"
                    android:textSize="25dp"
                    android:textColor="#F44336"
                    android:textStyle="bold"
            />
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="25dp"
                    android:textColor="#F44336"
                    android:textStyle="bold"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="Rp. "
                    android:textSize="25dp"
                    android:layout_marginLeft="8dp"
                    android:textColor="#F44336"
                    android:textStyle="bold"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1.5"
                    android:text="13.500.000"
                    android:layout_marginRight="50dp"
                    android:textSize="25dp"
                    android:textColor="#F44336"
                    android:gravity="right"
                    android:textStyle="bold"/>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>